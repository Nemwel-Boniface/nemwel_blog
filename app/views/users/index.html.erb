<div class="users">
  <h2>List of all Users:</h2>

  <%@users.each do |user|%>
    <div class="user">
      <img src="<%=user.photo%>" alt="User image" height="150" width="150" >
      <div class="user_details">
        <h3><%= user.name %></h3>
        <p>Number of posts: <%=user.post_counter%>
      </div>
    </div>
  <%end%>
</div>